<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="#3250a0" />
            <stroke android:width="0.5dp" android:color="#3250A0" />
        </shape>
    </item>
    
    <item android:state_focused="true">
        <shape>
            <solid android:color="#3250a0" />
            <stroke android:width="0.5dp" android:color="#3250A0" />
        </shape>
    </item>
    
    <item>
        <shape>
            <solid android:color="@color/mgp_white" />
            <stroke android:width="0.5dp" android:color="#3250A0" />
        </shape>
    </item>

</selector>