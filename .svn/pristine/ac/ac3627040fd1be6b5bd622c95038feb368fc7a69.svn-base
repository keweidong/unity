<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mgp_white"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mgp_title_layout_height"
        android:orientation="vertical" >

        <include
            android:id="@+id/mgp_regist_for_mail_complete_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/mgp_title" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/mgp_gray" />
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:orientation="vertical">
        
        <TextView
	        android:id="@+id/mgp_regist_for_mail_complete_tv1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/mgp_regist_mail_complete_hint1"
	        android:textSize="13.0sp"
	        android:paddingTop="20.0dip"
	        android:paddingLeft="20.0dip"
	        android:paddingRight="20.0dip"
	        android:textColor="#231815"
	        android:background="@color/mgp_white"/>
	
	    <TextView
	        android:id="@+id/mgp_regist_for_mail_complete_tv2"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/mgp_regist_mail_complete_hint2"
	        android:textSize="13.0sp"
	        android:paddingTop="20.0dip"
	        android:paddingLeft="20.0dip"
	        android:paddingRight="20.0dip"
	        android:paddingBottom="20.0dip"
	        android:textColor="#231815"
	        android:background="@color/mgp_white"/>
        
    </LinearLayout> 
</LinearLayout>
