        <shape >
            <corners 
		        android:topLeftRadius="0.0dip"
		        android:topRightRadius="0.0dip"
		        android:bottomLeftRadius="10.0dip"
		        android:bottomRightRadius="10.0dip"/>
			<solid
			    android:color="#E0242525"/>
			
			<stroke
