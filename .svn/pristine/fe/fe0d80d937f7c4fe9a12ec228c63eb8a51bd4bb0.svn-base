story(1)
{ 
	onmessage("start")
	{
	  showui(false);
	  wait(100);
	  showdlg(1);
	};
	onmessage("dialogover",1)
	{
	  log("dialogover:1");
	  showui(true); 
	  loop(8)
	  {
	    createnpc(1001+$$);
	  };	  
	};
	onmessage("allnpckilled")
	{
	  log("story 1 allnpckilled");
		wait(1000);
		showwall("AirWallAtoB",false);
	};
	onmessage("anyuserenterarea",17)
	{
		showwall("ADoor",true);
		startstory(2);
		terminate();	  
	};
  onmessage("timeout",19)
  {
    showdlg(3);
  };
  onmessage("missionfailed")
  {
    changescene(10000);
    terminate();
  };
};
