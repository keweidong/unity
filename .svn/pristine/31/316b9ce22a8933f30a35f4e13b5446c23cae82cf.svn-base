<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mgp_sdk_color"
    android:orientation="horizontal" >

    <ImageButton
        android:id="@+id/mgp_title_left_ibtn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/mgp_back_btn_xbg"
        android:layout_gravity="center_vertical|left"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:padding="@dimen/mgp_title_paddingLeft_and_right"
        android:src="@drawable/mgp_common_back" />

    <TextView
        android:id="@+id/mgp_title_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@color/mgp_white"
        android:textSize="@dimen/mgp_text_title_center" />

    <Button
        android:id="@+id/mgp_title_right_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="@color/mgp_white"
        android:layout_gravity="right|center_vertical"
        android:background="@drawable/mgp_back_btn_xbg"
        android:text="@string/mgp_login_btn_login"
        android:layout_marginRight="@dimen/mgp_title_paddingLeft_and_right"
        android:textSize="@dimen/mgp_text_max"/>
    
    <ImageButton
        android:id="@+id/mgp_title_right_imgbtn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:padding="@dimen/mgp_title_paddingLeft_and_right"
        android:layout_gravity="right|center_vertical"
        android:background="@drawable/mgp_back_btn_xbg"
        android:src="@drawable/mgp_onlineserver_server_tel"
        android:visibility="gone"/>

</FrameLayout>