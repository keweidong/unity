<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/mgp_list_item_xbg"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="3.3dip"
    android:paddingLeft="15.0dip"
    android:paddingTop="3.3dip" >

    <ImageView
        android:id="@+id/mgp_payment_item_way_logo_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/mgp_payment_way_alipay" />

    <LinearLayout
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/mgp_payment_item_way_name_tv"
            android:layout_width="wrap_content"
        	android:layout_height="match_parent"
            android:layout_marginLeft="15.0dip"
            android:layout_marginBottom="3dp"
            android:layout_weight="1.0"
            android:gravity="bottom"
            android:singleLine="true"
            android:textColor="@color/mgp_black"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/mgp_payment_item_way_describe_tv"
            android:layout_width="wrap_content"
        	android:layout_height="match_parent"
            android:layout_marginLeft="15.0dip"
            android:layout_marginTop="3dp"
            android:layout_weight="1.0"
            android:gravity="top"
            android:singleLine="true"
            android:textColor="#BCBCBC"
            android:textSize="10sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15.0dip"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/mgp_payment_next_pic" />

</LinearLayout>