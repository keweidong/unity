<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="mgp_MyDialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item> 
        <item name="android:windowNoTitle">true</item><!--除去title-->
        <item name="android:windowContentOverlay">@null</item> 
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@null</item><!--除去背景色-->
    </style>
    

    <style name="mgp_drop_down_list_header_progress_bar_style">
        <item name="android:minHeight">@dimen/mgp_drop_down_list_header_progress_bar_height</item>
        <item name="android:maxHeight">@dimen/mgp_drop_down_list_header_progress_bar_height</item>
    </style>

    <style name="mgp_drop_down_list_footer_progress_bar_style">
        <item name="android:minHeight">@dimen/mgp_drop_down_list_footer_progress_bar_height</item>
        <item name="android:maxHeight">@dimen/mgp_drop_down_list_footer_progress_bar_height</item>
    </style>

    <style name="mgp_drop_down_list_header_font_style">
        <item name="android:textColor">@color/mgp_drop_down_list_header_font_color</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="mgp_drop_down_list_header_second_font_style">
        <item name="android:textColor">@color/mgp_drop_down_list_header_second_font_color</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="mgp_drop_down_list_footer_font_style">
        <item name="android:textColor">@color/mgp_drop_down_list_footer_font_color</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
    
    <style name="mgp_charge_recorder_item_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/mgp_text_small</item>
        <item name="android:textColor">#7b7b7b</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="mgp_onlineserver_custom_dialog_style">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">true</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@android:color/transparent</item><!--背景透明-->
    	<item name="android:backgroundDimAmount">0.8</item>
        <item name="android:backgroundDimEnabled">true</item><!--模糊-->
    </style>
    
    <style name="mgp_Transparent">  
		<item name="android:windowBackground">@android:color/transparent</item>  
		<item name="android:windowIsTranslucent">true</item>  
		<item name="android:windowAnimationStyle">@+android:style/Animation.Translucent</item>  
	</style> 
	
    <style name="mgp_payment_way_card_dialog_RadioButton_style">  
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">62dp</item>
		<item name="android:paddingLeft">@dimen/mgp_payment_way_card_dialog_paddingLeft</item>
		<item name="android:background">#f5f5f5</item>
		<item name="android:button">@drawable/mgp_payment_way_card_dialog_img_xbg</item>
		<item name="android:textColor">@color/mgp_black</item>
		<item name="android:textSize">@dimen/mgp_text_mid</item>
	</style> 
	
    <style name="mgp_auto_loading_dialog">   
        <item name="android:windowFrame">@null</item>   
        <item name="android:windowNoTitle">true</item>    
        <item name="android:windowIsFloating">true</item> 
        <item name="android:windowContentOverlay">@null</item> 
        <item name="android:background">@null</item> 
        <!-- 设置无遮罩层 --> 
        <item name="android:backgroundDimEnabled">false</item> 
		<item name="android:windowBackground">@android:color/transparent</item>  
		<item name="android:windowIsTranslucent">true</item>  
		<item name="android:paddingLeft">25dip</item>  
		<item name="android:paddingRight">25dip</item>  
         
    </style>   
    
</resources>
