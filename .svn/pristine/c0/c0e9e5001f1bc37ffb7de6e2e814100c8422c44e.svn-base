story(1)
{ 
	local
  {
    @Stage(0);
    @npcarr(0);
  };
	onmessage("start")
	{
		wait(1900);
		sendgfxmessage("GfxGameRoot","EnableBloom");
		showui(false);
		publishlogicevent("ge_set_story_state","game",1);
		sendgfxmessage("Main Camera","DimScreen",10);
		wait(10);
		cameraheight(11,10);
		cameradistance(16,10);
		cameralookatimmediately(83.34779,150.0892,9.348223);
		publishgfxevent("ge_set_indicator_invisible","indicator");
		wait(10);
	  sendgfxmessage("Main Camera","LightScreen",2000);
		wait(1000);
		showdlg(102201);
		wait(3000);
		//publishgfxevent("ge_show_skip","ui",1);
	};
	onmessage("dialogover",102201)
	{
		wait(10);
		cameralookat(75.6881,150.0846,14.08343);
		wait(100);
		npcmovewithwaypoints(10004,vector2list("72.72727 17.23528"));
		wait(1300);
		showdlg(102202);
		wait(10);
		npcface(10001,5.0973145);
		publishlogicevent("ge_change_player_movemode","game",1);
	};
	onmessage("npcarrived",10004)
	{
		if(0==@npcarr)
		{
			inc(@npcarr);
			wait(50);
			npcface(10004,2.2589204);
			enableai(10004,false);
			wait(50);
		}
		else
			{
				destroynpc(10004);
			};
	};
	onmessage("dialogover",102202)
	{
		wait(10);
		showdlg(102203);
		wait(10);
		npccastskill(10001,380392);
		setcamp(10004,2);
		wait(900);
		enableai(10001,false);
		wait(3000);
		npccastskill(10004,300503);
		wait(10);
		setcamp(10004,3);
		wait(1000);
		enableai(10004,true);
		wait(2000);
		npcmovewithwaypoints(10004,vector2list("57.66917 23.9981"));
		wait(300);
		showdlg(102204);
		playerselfmovewithwaypoints(vector2list("79.91006 11.13309 77.01485 13.95068"));
	};
	onmessage("playerselfarrived")
	{
		wait(50);
		playerselfface(5.2965508);
	};	
	onmessage("dialogover",102204)
	{
		wait(10);
		publishgfxevent("ge_show_skip","ui",0);
		sendgfxmessage("Main Camera","DimScreen",800);
		wait(800);
		loop(4)
	  {
	    destroynpc(10001+$$);
	  };
	  wait(10);
	  cameraheight(-1,10);
		cameradistance(-1,10);
		camerafollowimmediately();
		wait(100);
		publishlogicevent("ge_change_player_movemode","game",2);
		sendgfxmessage("Main Camera","LightScreen",2000);
		wait(800);
		publishgfxevent("pve_checkpoint_begin","ui_effect","¼±ÐÐ¾ü¢ñ",2,2);
		wait(1500);
		showui(true);
		wait(10);
		publishgfxevent("ge_show_skip","ui",0);
		sendgfxmessage("GfxGameRoot","DisableBloom");
		wait(10);
		loop(3)
	  {
	    createnpc(1001+$$);
	  };
	  wait(1000);
	  publishlogicevent("ge_set_story_state","game",0);
	  publishgfxevent("ge_set_indicator_visible","indicator");
	  loop(4)
	  {
	    createnpc(1101+$$);
	  };
	  wait(1000);
	  setblockedshader(0x0000ff90,0.5,0,0xff000090,0.5,0);
	  wait(6000);
	  loop(4)
	  {
	    createnpc(1201+$$);
	  };
	  wait(500);
	  inc(@Stage);
	  wait(500);
	  setblockedshader(0x0000ff90,0.5,0,0xff000090,0.5,0);
	};
	onmessage("allnpckilled")
	{
		if(@Stage > 0)
		{
			wait(600);
			publishlogicevent("ge_area_clear", "game",0);
			wait(1500);
			showwall("AtoB",false);
			wait(100);
			restartareamonitor(2);
		};
	};
	onmessage("anyuserenterarea",2)
	{
		showwall("BDoor",true);
		startstory(2);
		terminate();	  
	};
  onmessage("missionfailed")
  {
    changescene(0);
    terminate();
  };
};
