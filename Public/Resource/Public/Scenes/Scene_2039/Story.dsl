story(1)
{ 
	local
	{
		@Count(0);
	};
	onmessage("start")
	{
	  wait(10);
	  inc(@Count);
	  wait(100);
	  loop(6)
	  {
	  	createnpc(1001+$$);
	  	wait(300);
	  };
	  wait(1000);
	  setblockedshader(0x0000ff90,0.5,0,0xff000090,0.5,0);
	};
	onmessage("allnpckilled")
	{
		wait(10);
		inc(@Count);
	  wait(2000);
	  if(2==@Count)
	  {
		  loop(6)
		  {
		  	createnpc(1007+$$);
		  	wait(300);
		  };
		};
		if(3==@Count)
	  {
		  loop(6)
		  {
		  	createnpc(1013+$$);
		  	wait(300);
		  };
		  wait(20000);
		  loop(5)
		  {
		  	createnpc(1019+$$);
		  	wait(300);
		  };
		  wait(10000);
		  loop(1)
		  {
		  	createnpc(1024+$$);
		  	wait(300);
		  	startstory(2);
				terminate();
			};
		};
		wait(1000);
		setblockedshader(0x0000ff90,0.5,0,0xff000090,0.5,0);
	};
	onmessage("missionfailed")
  {
    changescene(0);
    terminate();
  };
};
