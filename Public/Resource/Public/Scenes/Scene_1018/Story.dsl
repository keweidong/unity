story(3)
{
  local
  {
    @hp(0);
    @maxhp(0);
    @trg(0);
  };
	onmessage("start")
	{	
		sendgfxmessage("GfxGameRoot","EnableBloom");
		@maxhp = getmaxhp(unitid2objid(2001));
		while(@trg < 1) 
    { 
			@hp = gethp(unitid2objid(2001)); 
      if(@hp < 0.1*@maxhp) 
