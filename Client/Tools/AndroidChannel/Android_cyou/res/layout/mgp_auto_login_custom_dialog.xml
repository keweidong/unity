<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="25dip"
    android:layout_marginRight="25dip"
    android:orientation="vertical">

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="119dip"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/mgp_auto_login_custom_dialog_bg">
        <TextView 
            android:id="@+id/mgp_auto_login_acc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:singleLine="true"
	    	android:ellipsize="end"
            android:text="@string/mgp_login_success_account"
            android:textColor="@color/mgp_auto_login_account_color"/>
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
	        android:layout_marginTop="14dip"
            android:orientation="horizontal">
	        <TextView 
	            android:id="@+id/mgp_auto_login_isloging_tv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="18sp"
	            android:textStyle="bold"
	            android:text="@string/mgp_auto_login_isloging_tv"
	            android:textColor="@color/mgp_auto_login_isloging_color"/>
            <TextView 
                android:id="@+id/mgp_auto_login_isloging_ellipsis_tv"
                android:layout_width="18dip"
                android:layout_height="wrap_content"
	            android:textSize="18sp"
	            android:textStyle="bold"
	            android:text="@string/mgp_auto_login_isloging_ellipsis"
                android:textColor="@color/mgp_auto_login_isloging_color"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="31dip"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingRight="10dip"
        android:background="@drawable/mgp_auto_login_custom_dialog_bottom">
        <TextView 
            android:id="@+id/mgp_auto_login_switch_acc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:drawablePadding="5dip"
            android:drawableLeft="@drawable/mgp_auto_login_switch_acc_icon"
            android:textColor="@color/mgp_auto_login_switch_acc_color"
            android:text="@string/mgp_auto_login_switching_account_tv"/>
    </RelativeLayout>

</LinearLayout>
