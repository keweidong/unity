<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f5f5"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:layout_marginLeft="22dp"
            android:gravity="center_vertical"
            android:text="@string/mgp_payment_way_card_select1_tv"
            android:textColor="@color/mgp_sdk_color"
            android:textSize="@dimen/mgp_text_max" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/mgp_sdk_color" />

        <RadioGroup
            android:id="@+id/mgp_payment_way_phone_card_RadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="22dp"
            android:paddingRight="22dp" >

            <RadioButton
                android:id="@+id/mgp_payment_way_phone_card_RadioButton1"
                style="@style/mgp_payment_way_card_dialog_RadioButton_style"
                android:text="@string/mgp_payment_way_card_phone1" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d5d5d5" />

            <RadioButton
                android:id="@+id/mgp_payment_way_phone_card_RadioButton2"
                style="@style/mgp_payment_way_card_dialog_RadioButton_style"
                android:text="@string/mgp_payment_way_card_phone2" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d5d5d5" />

            <RadioButton
                android:id="@+id/mgp_payment_way_phone_card_RadioButton3"
                style="@style/mgp_payment_way_card_dialog_RadioButton_style"
                android:text="@string/mgp_payment_way_card_phone3" />
        </RadioGroup>
    </LinearLayout>

</LinearLayout>