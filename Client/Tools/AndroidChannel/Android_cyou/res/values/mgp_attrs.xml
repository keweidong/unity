<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <declare-styleable name="title">
        <attr name="mgp_text" format="string"/>
        <attr name="mgp_left_btn_src" format="reference"/>
        <attr name="mgp_right_btn_src" format="reference"/>
    </declare-styleable>
    
    <declare-styleable name="mgp_drop_down_list_attr">
        <attr name="isOpenDropDown" format="boolean" />
        <attr name="isOpenLoadMore" format="boolean" />
        <attr name="isAutoLoadOnBottom" format="boolean" />
    </declare-styleable>
    
    <declare-styleable name="mgp_charge_record_dot">
        <attr name="mgp_big_color" format="string"></attr>
        <attr name="mgp_small_color" format="string"></attr>
        <attr name="mgp_big_radius" format="integer"></attr>
        <attr name="mgp_small_radius" format="integer"></attr>
    </declare-styleable>
</resources>
