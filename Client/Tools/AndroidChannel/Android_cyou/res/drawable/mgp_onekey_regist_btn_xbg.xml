<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape >
            <corners android:bottomLeftRadius="3dp" android:bottomRightRadius="3dp" android:topLeftRadius="3dp" android:topRightRadius="3dp"/>
            <stroke 
                android:width="1dp"
                android:color="@color/mgp_sdk_color"/>
            <solid android:color="@color/mgp_sdk_color"/>
        </shape>
    </item>
    
    <item android:state_focused="true">
        <shape >
            <corners android:bottomLeftRadius="3dp" android:bottomRightRadius="3dp" android:topLeftRadius="3dp" android:topRightRadius="3dp"/>
            <stroke 
                android:width="1dp"
                android:color="@color/mgp_sdk_color"/>
            <solid android:color="@color/mgp_sdk_color"/>
        </shape>
    </item>
    
    <item >
        <shape >
            <corners android:bottomLeftRadius="3dp" android:bottomRightRadius="3dp" android:topLeftRadius="3dp" android:topRightRadius="3dp"/>
            <stroke 
                android:width="1dp"
                android:color="@color/mgp_sdk_color"/>
            <solid android:color="@color/mgp_white"/>
        </shape>
    </item>

</selector>
